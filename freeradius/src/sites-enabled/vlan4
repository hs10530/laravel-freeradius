server vlan4 {
listen {
	ipaddr = *
	type = auth
	port = 1814
	limit {
	      max_connections = 16
	      lifetime = 0
	      idle_timeout = 30
	}
}
listen {
	ipaddr = *
	port = 1815
	type = acct

	limit {
	}
}

authorize {
	filter_username
	preprocess
	sql

	if (SQL-Group != "staff" && SQL-Group != "staffkids" && SQL-Group != "guests") {
		reject
	}
	expiration
	logintime
	pap
}


authenticate {
	Auth-Type PAP {
		pap
	}
	eap
}

preacct {
	preprocess
	acct_unique
	suffix
}

#
#  Accounting.  Log the accounting data.
#
accounting {
	#detail
	unix
	sql
	exec
	attr_filter.accounting_response
}

session {
	sql
}
post-auth {
	update {
		&reply: += &session-state:
	}

	exec

	Post-Auth-Type REJECT {
		attr_filter.access_reject
	}
}

pre-proxy {
}
post-proxy {
	eap
}
}
